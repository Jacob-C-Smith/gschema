{
    "$schema"      : "http://json-schema.org/schema",
    "title"        : "G10 Texture",
    "type"         : "object",
    "description"  : "G10 texture object",
    "properties"   : {
        "name"       : {
            "title"       : "name",
            "type"        : "string",
            "default"     : "Texture",
            "minLength"   : 1,
            "maxLength"   : 255,
            "description" : "The name of the texture"
        },
        "path"       : {
            "title"       : "path",
            "type"        : "string",
            "default"     : "path/to/file.png",
            "description" : "File path to a PNG, QOI, Radiance HDR, Bitmap, or JPG image"
        },
        "filter"     : {
            "title"       : "filter",
            "description" : "Texture filtering mode",
            "type"        : "string",
            "default"     : "linear",
            "enum"        : [ "linear", "nearest" ]
        },
        "addressing" : {
            "title"       : "addressing",
            "description" : "Texture addressing mode",
            "type"        : "string",
            "default"     : "repeat",
            "enum"        : [ "repeat", "mirror repeat", "clamp edge", "clamp border", "mirror clamp edge" ]
        }
    },
    "required"     : [ "name", "path" ]
}