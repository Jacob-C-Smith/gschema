{
    "$schema"      : "http://json-schema.org/schema",
    "title"        : "G10 Light",
    "type"         : "object",
    "description"  : "G10 light object definition",
    "properties"   : {
        "name"     : {
            "title"       : "name",
            "type"        : "string",
            "default"     : "Light",
            "minLength"   : 1,
            "maxLength"   : 255,
            "description" : "The name of the light"
        },
        "comment" : {
            "title"       : "comment",
            "type"        : "string",
            "default"     : "comment",
            "description" : "A comment that is ignored by G10"
        },
        "type"    : {
            "title"       : "type",
            "type"        : "string",
            "default"     : "point",
            "description" : "The type of the light",
            "enum": [
                "point",
                "directional",
                "spot",
                "area"
            ]
        },
        "location" : {
            "title"       : "location",
            "type"        : "array",
            "description" : "location of the light, < x, y, z >",
            "items"       : { "type" : "number" },
            "minItems"    : 3,
            "maxItems"    : 3,
            "default"     : [ 1.0, 1.0, 1.0 ]
        },
        "color"    : {
            "title"       : "color",
            "type"        : "array",
            "description" : "color of the light, < r, g, b >",
            "items"       : { "type" : "number", "maximum": 1.0, "minimum": 0.0 },
            "minItems"    : 3,
            "maxItems"    : 3,
            "default"     : [ 1.0, 1.0, 1.0 ]
        },
        "intensity":{
            "title" : "intensity",
            "type"  : "number",
            "description": "The intensity of the light in watts",
            "minimum": 0.0,
            "maximum": 100000.0,
            "default" : 60.0
        },
        "falloff" : {
            "title": "falloff",
            "type" : "number",
            "description": "The falloff distance of the light",
            "minimum": 0.01,
            "maximum": 1000.0,
            "default": 2
        },
        "direction" : {
            "title"       : "direction",
            "type"        : "array",
            "description" : "Direction of the light, < x, y, z >",
            "items"       : { "type" : "number"},
            "minItems"    : 3,
            "maxItems"    : 3,
            "default"     : [ 0.0, 0.0, -1.0 ]
        },
        "angle" : {
            "title"       : "angle",
            "type"        : "number",
            "description" : "The angle of the spot light cone, in degrees",
            "minimum"     : 0.0,
            "maximum"     : 180.0,
            "default"     : 30.0
        },
        "length" : {
            "title"       : "length",
            "type"        : "number",
            "description" : "The length of the area light cone",
            "minimum"     : 0.0,
            "maximum"     : 1000.0
        },
        "radius" : {
            "title"       : "radius",
            "type"        : "number",
            "description" : "The radius of the area light",
            "minimum"     : 0.0,
            "maximum"     : 1000.0
        }
    },
    "required"     : [ "name", "type", "location", "color", "intensity", "falloff" ]
}