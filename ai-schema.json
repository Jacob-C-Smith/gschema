{
    "$schema": "http://json-schema.org/schema",
    "title": "G10 AI",
    "description": "Describes a Finite State Automaton",
    "type" : "object",
    "properties": {
        "name" : {
            "title": "Name",
            "description": "The name of the FSA",
            "type" : "string",
            "default": "AI"
        },
        "states" : {
            "title": "States",
            "description": "A list of states",
            "type" : "array",
            "default" : [ "running forward", "attack" ],
            "items": [
                { "type" : "string" }
            ]
        },
        "initial state" : {
            "title": "Initial state",
            "description": "The state that the FSA starts in. Must be one of the specified states",
            "type" : "string",
            "default" : ""
        }
    }
}