{
    "$schema": "https://raw.githubusercontent.com/Jacob-C-Smith/G10-Schema/main/shader-schema.json",
    "name": "PBR",
    "comment": "comment",
    "vertex shader": {
        "path": "path/to/vertex shader.spv",
        "in": [
            {
                "name": "geom",
                "index": 0,
                "type": "vec3"
            },
            {
                "name": "normal",
                "index": 1,
                "type": "vec2"
            },
            {
                "name": "UV",
                "index": 2,
                "type": "vec2"
            },
            {
                "name": "Bone groups",
                "index": 3,
                "type": "ivec4"
            },
            {
                "name": "Bone Weights",
                "index": 4,
                "type": "vec4"
            }
        ],
        "out": [
            {
                "name": "outWorldPos",
                "index": 0,
                "type": "vec3"
            },
            {
                "name": "outNormal",
                "index": 1,
                "type": "vec3"
            },
            {
                "name": "outUV0",
                "index": 2,
                "type": "vec2"
            }
        ],
        "uniform": [
            {
                "name": "camera parameters",
                "set": 0,
                "binding": 0,
                "data": [
                    {
                        "name": "projection",
                        "type": "mat4"
                    },
                    {
                        "name": "model",
                        "type": "mat4"
                    },
                    {
                        "name": "view",
                        "type": "mat4"
                    },
                    {
                        "name": "camPos",
                        "type": "vec3"
                    }
                ]
            },
            {
                "name" : "camera parameters",
                "set" : 0,
                "binding" : 1,
                "data" : [
                    {
                        "name" : "lightDir",
                        "type" : "vec4"
                    },
                    {
                        "name" : "exposure",
                        "type" : "float"
                    },
                    {
                        "name" : "gamma",
                        "type" : "float"
                    },
                    {
                        "name" : "prefilteredCubeMipLevels",
                        "type" : "float"
                    },
                    {
                        "name" : "scaleIBLAmbient",
                        "type" : "float"
                    },
                    {
                        "name" : "debugViewInputs",
                        "type" : "float"
                    },
                    {
                        "name" : "debugViewEquation",
                        "type" : "float"
                    },
                    {
                        "name" : "prefilteredCubeMipLevels",
                        "type" : "vec3"
                    },
                    {
                        "name" : "prefilteredCubeMipLevels",
                        "type" : "vec3"
                    }
                ]
            },
            {
                "name" : "samplerIrradiance",
                "set" : 0,
                "binding" : 2,
                "type" : "sampler cube"
            },
            {
                "name" : "prefilteredMap",
                "set" : 0,
                "binding" : 3,
                "type" : "sampler cube"
            },
            {
                "name" : "samplerBRDFLUT",
                "set" : 0,
                "binding" : 4,
                "type" : "sampler 2D"
            },
            {
                "name" : "colorMap",
                "set" : 1,
                "binding" : 0,
                "type" : "sampler 2D"
            },
            {
                "name" : "physicalDescriptorMap",
                "set" : 1,
                "binding" : 1,
                "type" : "sampler 2D"
            },
            {
                "name" : "normalMap",
                "set" : 1,
                "binding" : 2,
                "type" : "sampler 2D"
            },
            {
                "name" : "aoMap",
                "set" : 1,
                "binding" : 3,
                "type" : "sampler 2D"
            },
            {
                "name" : "emissiveMap",
                "set" : 1,
                "binding" : 4,
                "type" : "sampler 2D"
            },
            {
                "name" : "bones",
                "set" : 0,
                "binding" : 0,
                "data" : [
                    {
                        "name" : "matrix",
                        "type" : "mat4"
                    },
                    {
                        "name" : "jointMatrix",
                        "type" : "mat4 list",
                        "max"  :  128
                    },
                    {
                        "name" : "jointCount",
                        "type" : "float"
                    }
                ]
            }
        ],
        "push constant":            {
            "name" : "material",
            "data"          : [
                {
                    "name" : "baseColorFactor",
                    "type" : "vec4"
                },
                {
                    "name" : "emissiveFactor",
                    "type" : "vec4"
                },
                {
                    "name" : "diffuseFactor",
                    "type" : "vec4"
                },
                {
                    "name" : "specularFactor",
                    "type" : "vec4"
                },
                {
                    "name" : "workflow",
                    "type" : "float"
                },
                {
                    "name" : "baseColorTextureSet",
                    "type" : "int"
                },
                {
                    "name" : "physicalDescriptorTextureSet",
                    "type" : "int"
                },
                {
                    "name" : "normalTextureSet",
                    "type" : "int"
                },
                {
                    "name" : "occlusionTextureSet",
                    "type" : "int"
                },
                {
                    "name" : "emissiveTextureSet",
                    "type" : "int"
                },
                {
                    "name" : "metallicFactor",
                    "type" : "float"
                },
                {
                    "name" : "roughnessFactor",
                    "type" : "float"
                },
                {
                    "name" : "alphaMask",
                    "type" : "float"
                },
                {
                    "name" : "alphaMaskCutoff",
                    "type" : "float"
                }
            ]
        }
    }
}