{
    "$schema": "https://raw.githubusercontent.com/Jacob-C-Smith/G10-Schema/main/scene-schema.json",
    "name": "G10 Scene",
    "entities": [
        {
            "$schema": "https://raw.githubusercontent.com/Jacob-C-Smith/G10-Schema/main/entity-schema.json",
            "name": "Entity",
            "comment": "comment",
            "parts": [
                {
                    "$schema": "https://raw.githubusercontent.com/Jacob-C-Smith/G10-Schema/main/part-schema.json",
                    "name": "Part",
                    "material": "G10 Missing Material",
                    "shader": "G10 PBR",
                    "path": "path/to/file.ply"
                }
            ],
            "materials": [
                {
                    "$schema": "https://raw.githubusercontent.com/Jacob-C-Smith/G10-Schema/main/material-schema.json",
                    "name": "Material",
                    "textures": [
                        {
                            "$schema": "https://raw.githubusercontent.com/Jacob-C-Smith/G10-Schema/main/texture-schema.json",
                            "name": "Texture",
                            "path": "path/to/file.png"
                        },
                        {
                            "$schema": "https://raw.githubusercontent.com/Jacob-C-Smith/G10-Schema/main/texture-schema.json",
                            "name": "Texture",
                            "path": "path/to/file.png"
                        },
                        {
                            "$schema": "https://raw.githubusercontent.com/Jacob-C-Smith/G10-Schema/main/texture-schema.json",
                            "name": "Texture",
                            "path": "path/to/file.png"
                        }
                    ]
                }
            ],
            "shader": "G10/shaders/G10 PBR.json",
            "transform": {
                "$schema"  : "https://raw.githubusercontent.com/Jacob-C-Smith/G10-Schema/main/transform-schema.json",
                "location" : [ 0, 0, 0 ],
                "rotation" : [ 0, 0, 0 ],
                "scale"    : [ 1, 1, 1 ]
            },
            "rigid body": {
                "$schema"  : "https://raw.githubusercontent.com/Jacob-C-Smith/G10-Schema/main/rigid-body-schema.json",
                "mass"     : 1.0,
                "active"   : false,
                "friction" : 1.0,
                "bounce"   : 1.0
            },
            "collider": {
                "$schema": "https://raw.githubusercontent.com/Jacob-C-Smith/G10-Schema/main/collider-schema.json",
                "max" : [
                    1,
                    1,
                    1
                ],
                "min" : [
                    -1,
                    -1,
                    -1
                ],
                "type": "box",
            },
            "ai" : {
                "$schema": "https://raw.githubusercontent.com/Jacob-C-Smith/G10-Schema/main/ai-schema.json",
                "name": "AI",
                "states": [
                    "running left",
                    "running right",
                    "in shell",
                    "attack"
                ],
                "initial state": "running left"
            },
            "rig": {
                "$schema": "https://raw.githubusercontent.com/Jacob-C-Smith/G10-Schema/main/rig-schema.json",
                "bones": {
                    "name": "Bone 0",
                    "index": 0,
                    "children": [
                        {
                            "name": "Bone",
                            "index": 0
                        }
                    ]
                }
            }
        }
    ]
}